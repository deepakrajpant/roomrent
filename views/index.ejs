<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Room Rental - Home</title>
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">Room Rental</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
         <ul class="navbar-nav ms-auto">
           <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
           <li class="nav-item"><a class="nav-link" href="/listings">Rooms</a></li>
           <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
           <li class="nav-item"><a class="nav-link" href="/admin">Admin</a></li>
           <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
           <li class="nav-item"><a class="nav-link" href="/faqs">FAQs</a></li>
           <li class="nav-item"><a class="nav-link" href="/reviews">Reviews</a></li>
         </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section with Search -->
  <div class="container mt-5 pt-5">
    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Find Your Perfect Room</h1>
        <p class="col-md-8 fs-4">Search our listings and book a room that fits your needs.</p>
        <form class="row g-3">
          <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Enter location" />
          </div>
          <div class="col-md-3">
            <select class="form-select">
              <option selected>Price Range</option>
              <option value="1">Low</option>
              <option value="2">Medium</option>
              <option value="3">High</option>
            </select>
          </div>
          <div class="col-md-3">
            <select class="form-select">
              <option selected>Amenities</option>
              <option value="wifi">Wi-Fi</option>
              <option value="ac">AC</option>
              <option value="furnished">Furnished</option>
            </select>
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Featured Rooms -->
    <h2 class="mb-4">Featured Rooms</h2>
    <div class="row">
      <% rooms.forEach(function(room) { %>
      <div class="col-md-3 mb-4">
        <div class="card h-100">
          <img src="<%= room.image %>" class="card-img-top" alt="<%= room.title %>" />
          <div class="card-body">
            <h5 class="card-title"><%= room.title %></h5>
            <p class="card-text">$<%= room.price %>/month</p>
            <a href="/booking/<%= room._id %>" class="btn btn-primary">Book Now</a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <footer class="bg-dark text-white text-center p-4 mt-5">
    &copy; 2025 Room Rental. All Rights Reserved.
  </footer>

  <!-- Bootstrap JS CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
